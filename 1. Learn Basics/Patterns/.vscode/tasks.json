{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and run",
        "type": "shell",
        "command": "cmd",
        "args": [
          "/C",
          "copy",
          "\"${file}\"",
          "\"${workspaceFolder}\\jspwTest.cpp\"",
          "&&",
          "g++",
          "\"${workspaceFolder}\\jspwTest.cpp\"",
          "-o",
          "\"${workspaceFolder}\\jspwTest\"",
          "&&",
          "\"${workspaceFolder}\\jspwTest.exe\"",
          "<",
          "\"${workspaceFolder}\\input.txt\"",
          ">",
          "\"${workspaceFolder}\\output.txt\"",
          "&&",
          "del",
          "\"${workspaceFolder}\\jspwTest.exe\"",
          "&&",
          "del",
          "\"${workspaceFolder}\\jspwTest.cpp\""
        ],
        "presentation": {
          "reveal": "never"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": "relative",
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      }
    ]
  }
  